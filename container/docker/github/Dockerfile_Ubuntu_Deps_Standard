FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
 && apt-get -y install --no-install-recommends \
	build-essential \
	curl \
	unzip \
	python3

RUN apt-get -y install git

WORKDIR /julea-deps

COPY scripts/ . 

SHELL ["/bin/bash", "-c"]

RUN ./install-dependencies.sh
RUN rm -rf /julea-deps
